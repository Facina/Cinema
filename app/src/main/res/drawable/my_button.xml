<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <corners android:radius="8dip" />
            <stroke android:width="5px" android:color="#43A047" />
            <gradient android:angle="-90" android:startColor="#43A047" android:endColor="#9E9E9E"  />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#43A047" />
            <solid android:color="#4CAF50"/>
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle"  >

            <corners android:radius="8dip" />
            <stroke android:width="5px" android:color="#B71C1C" />
            <gradient android:angle="-90" android:startColor="@color/colorPrimary" android:endColor="#BF360C" />
        </shape>
    </item>


</selector>